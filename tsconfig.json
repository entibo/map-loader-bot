{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "js",
    "esModuleInterop": true,
    "typeRoots": ["/types", "/node_modules/@types"],
    "types": ["node"],
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"]
}